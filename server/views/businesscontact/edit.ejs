<% include ../partials/header.ejs %>
<main class="container">
    <h1>Edit a User</h1>
    <div class="col-sm-4">
        <form method="post">
            <fieldset class="form-group">
                <label for="name">name: *</label>
                <input name="name" type="text" class="form-control" required value="<%= contact.name %>" autofocus />
            </fieldset>
            <fieldset class="form-group">
                <label for="tel">tel: *</label>
                <input name="tel" type="text" class="form-control" required value="<%= contact.tel %>" />
            </fieldset>
            <fieldset class="form-group">
                <label for="email">email: *</label>
                <input name="email" type="email" class="form-control" required value="<%= contact.email %>"/>
            </fieldset>
            <fieldset class="form-group">
                <label for="address">Address : *</label>
                <input name="address" type="text" class="form-control" required value="<%= contact.address %>"/>
            </fieldset>
            <fieldset class="form-group text-right">
                <button type="submit" class="btn btn-primary" title="Update">
                    <i class="fa fa-pencil-square-o"></i> Update</button>
                <a href="/users/delete/<%= contact._id %>" title="Delete" onclick="return confirm('Are you sure you want to delete this?');" class="btn btn-danger">
                    <i class="fa fa-trash-o"></i> Delete
                </a>
                <a href="/users" title="Cancel"  class="btn btn-default">
                    <i class="fa fa-undo"></i>  Cancel
                </a>
            </fieldset>
        </form>
    </div>

</main>
<% include ../partials/footer.ejs %>
