<% include ../partials/header.ejs %>

<main class="container">
    <h1>Business Contact</h1>
    <div class="panel panel-default">
        <div class="panel-heading">
            <a href="/businesscontact/add" title="Add contact"><i class="fa fa-plus-circle"></i> Add a new Contact</a>
        </div> <!-- heading -->
        <% if (contact.length > 0) { %>
        <div class="panel-body table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Tel</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th></th>
                    </tr>
                </thead>
                </tbody>
                <% for (var i = 0; i < contact.length; i++) { %>
                <tr>
                    <td>
                        <%= contact[i].name %>
                    </td>
                    <td>
                        <%= contact[i].tel %>
                    </td>
                    <td>
                        <%= contact[i].email %>
                    </td>
                    <td>
                        <%= contact[i].address %>
                    </td>
                    
                    <td>
                        <a href="/businesscontact/<%= contact[i]._id %>" title="Edit" class="btn btn-primary">
                            <i class="fa fa-pencil-square-o"></i>
                        </a>
                        <a href="/businesscontact/delete/<%= contact[i]._id %>" title="Delete" onclick="return confirm('Are you sure you want to delete this?');" class="btn btn-danger">
                            <i class="fa fa-trash-o"></i>
                        </a>
                    </td>   
                </tr>
                <% } %>
                </tbody>
            </table>
        </div> <!--body -->
        <% } %>
    </div>

</main>
<% include ../partials/footer.ejs %>
